@model IEnumerable<EventManagement.Models.Event>

<h2>Events</h2>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Date</th>
            <th>Time</th>
            <th>Location</th>
            <th>Category</th>
            <th>Price</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Date.ToShortDateString()</td>
                <td>@item.Time</td>
                <td>@item.Location</td>
                <td>@item.Category.CategoryName</td>
                <td>@item.TicketPrice</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.EventID" asp-controller="Event">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.EventID" asp-controller="Event">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
